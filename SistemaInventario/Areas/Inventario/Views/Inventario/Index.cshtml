@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary"> Stock de Productos </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="NuevoInventario"> <i class="fas fa-plus"></i> Crear Nuevo Inventario </a>
    </div>
</div>

<br />

<div class="p-4 border rounded">
    <table id="tblDatos" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Bodega</th>
                <th>Producto</th>
                <th>Costo</th>
                <th>Cantidad</th>
            </tr>
        </thead>
    </table>
</div>

<div class="col-6 p-2">
    <a class="btn btn-success" asp-action="Historial">
        <i class="fas fa-calendar-week"></i> Historial
    </a>
</div>

@section Scripts{
    <script src="~/js/inventario.js"></script>
}